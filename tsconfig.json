{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "types": ["jest", "node"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts"]
}
